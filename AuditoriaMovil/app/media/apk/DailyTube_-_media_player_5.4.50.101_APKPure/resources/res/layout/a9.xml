<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto" android:gravity="center_vertical" android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content">
    <ImageView android:id="@+id/iv_icon" android:layout_width="44dp" android:layout_height="44dp" android:layout_margin="12dp" app:srcCompat="@mipmap/ic_launcher"/>
    <LinearLayout android:orientation="vertical" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="1">
        <TextView android:textColor="@color/j6" android:id="@+id/tv_name" android:layout_width="wrap_content" android:layout_height="wrap_content" android:textAllCaps="false"/>
        <ProgressBar android:id="@+id/progress_bar" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="8dp" android:progressDrawable="@drawable/fhe" style="@style/p3"/>
    </LinearLayout>
    <TextView android:textColor="@color/j6" android:gravity="center" android:id="@+id/tv_progress" android:layout_width="60dp" android:layout_height="26dp" android:layout_margin="12dp" android:textAllCaps="false"/>
</LinearLayout>
