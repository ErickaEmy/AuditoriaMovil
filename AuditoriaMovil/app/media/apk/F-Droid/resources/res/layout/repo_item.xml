            <TextView android:textSize="14sp" android:textColor="@color/unverified" android:ellipsize="end" android:gravity="start|center_vertical" android:id="@+id/repo_unverified" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unverified" android:singleLine="true"/>
            <TextView android:textSize="14sp" android:textColor="@color/unsigned" android:ellipsize="end" android:gravity="start|center_vertical" android:id="@+id/repo_unsigned" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/unsigned" android:singleLine="true"/>
        </LinearLayout>
        <com.google.android.material.switchmaterial.SwitchMaterial android:id="@+id/repo_switch" android:layout_width="wrap_content" android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.cardview.widget.CardView>
