<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
    <TextView android:textAppearance="?android:attr/textAppearanceMedium" android:id="@+id/install_confirm" android:paddingLeft="16dp" android:paddingTop="4dp" android:paddingRight="16dp" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="@string/install_confirm"/>
    <ImageView android:id="@+id/divider" android:background="?attr/dividerHorizontal" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_marginTop="16dp"/>
    <FrameLayout android:id="@+id/filler" android:visibility="gone" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1"/>
    <TabHost android:id="@android:id/tabhost" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1">
        <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="match_parent">
            <HorizontalScrollView android:id="@+id/tabscontainer" android:background="@drawable/tab_unselected_holo" android:scrollbars="none" android:layout_width="match_parent" android:layout_height="wrap_content" android:fillViewport="true">
                <FrameLayout android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TabWidget android:layout_gravity="center" android:orientation="horizontal" android:id="@android:id/tabs" android:layout_width="wrap_content" android:layout_height="wrap_content"/>
                </FrameLayout>
            </HorizontalScrollView>
            <FrameLayout android:id="@android:id/tabcontent" android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="0"/>
            <androidx.viewpager.widget.ViewPager android:id="@+id/pager" android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1"/>
        </LinearLayout>
    </TabHost>
    <LinearLayout android:orientation="vertical" android:layout_width="match_parent" android:layout_height="wrap_content" android:divider="?attr/dividerHorizontal" android:showDividers="beginning">
        <LinearLayout android:orientation="horizontal" android:layout_width="match_parent" android:layout_height="wrap_content" android:measureWithLargestChild="true" style="?android:attr/buttonBarStyle">
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.25"/>
            <Button android:layout_gravity="start" android:id="@+id/cancel_button" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/cancel" android:maxLines="2" android:layout_weight="1" style="?android:attr/buttonBarButtonStyle"/>
            <Button android:layout_gravity="end" android:id="@+id/ok_button" android:layout_width="0dp" android:layout_height="wrap_content" android:text="@string/next" android:maxLines="2" android:layout_weight="1" android:filterTouchesWhenObscured="true" style="?android:attr/buttonBarButtonStyle"/>
            <LinearLayout android:orientation="horizontal" android:visibility="gone" android:layout_width="0dp" android:layout_height="wrap_content" android:layout_weight="0.25"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
